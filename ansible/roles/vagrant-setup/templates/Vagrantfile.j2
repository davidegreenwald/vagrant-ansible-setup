Vagrant.configure("2") do |config|
  
  # set the VM
  config.vm.box = "{{ item.vagrant_box }}"
  
  # set the IP
  config.vm.network "private_network", ip: "{{ item.vagrant_private_ip }}"
  
  # Assign the local key to the vagrant user
  config.vm.provision "shell",
    inline: "cat /vagrant/{{ ssh_folder }}/vagrant_rsa.pub >> /home/vagrant/.ssh/authorized_keys"

end